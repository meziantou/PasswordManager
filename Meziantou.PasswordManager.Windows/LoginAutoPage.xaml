<UserControl x:Class="Meziantou.PasswordManager.Windows.LoginAutoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:fa="clr-namespace:Meziantou.WpfFontAwesome;assembly=Meziantou.WpfFontAwesome"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock VerticalAlignment="Center" Style="{StaticResource FontAwesomePulse}" Text="{fa:Icon Spinner}"/>
            <TextBlock VerticalAlignment="Center">Please wait, we are currently logging in you...</TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
